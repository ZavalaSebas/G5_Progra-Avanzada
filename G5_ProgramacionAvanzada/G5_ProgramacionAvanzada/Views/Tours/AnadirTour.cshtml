﻿@model IEnumerable<G5_ProgramacionAvanzada.Entities.ToursEnt>
@{
    ViewBag.Title = "ConsultaTours";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Banner Area -->
<section id="common_banner">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <div class="common_bannner_text">
                    <h2>Vehículos</h2>
                    <ul>
                        <li><a href="@Url.Action("Index","Login")">Index</a></li>
                        <li><span><i class="fas fa-circle"></i></span> Vehículos</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>



<section id="explore_area" class="section_padding">
    <div class="container">
        <!-- Section Heading -->
        <div class="row">
            <div class="col-md-12">
                <div class="section_heading_center">
                    <h2>
                        Tours Disponibles
                    </h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <div class="left_side_search_area">
                    <div class="left_side_search_boxed">
                        <div class="col-lg-12">
                            <a href="@Url.Action("AnadirCarro", "Carros")" class="btn btn-outline-info font-weight-medium auth-form-btn">Añadir Tour</a>
                        </div>
                    </div>

                    @*------------------Lado izquierdo de la pantalla--------------------*@

                    <div class="left_side_search_boxed">
                        <div class="item_searc_map_area">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3677.6962663570607!2d89.56355961427838!3d22.813715829827952!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39ff901efac79b59%3A0x5be01a1bc0dc7eba!2sAnd+IT!5e0!3m2!1sen!2sbd!4v1557901943656!5m2!1sen!2sbd"></iframe>
                        </div>
                    </div>
                    <div class="left_side_search_boxed">
                        <div class="left_side_search_heading">
                            <h5>Search by name</h5>
                        </div>
                        <div class="name_search_form">
                            <input type="text" class="form-control" placeholder="e.g Deluxe bus">
                            <i class="fas fa-search"></i>
                        </div>
                    </div>
                    <div class="left_side_search_boxed">
                        <div class="left_side_search_heading">
                            <h5>Filter by price</h5>
                        </div>
                        <div class="filter-price">
                            <div id="price-slider"></div>
                        </div>
                        <button class="apply" type="button">Apply</button>
                    </div>
                </div>
            </div>
            @*------------------Lado derecho de la pantalla--------------------*@


            <div class="col-lg-9">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="cruise_search_result_wrapper">
                            @foreach (var item in Model)
                            {
                                <div class="cruise_search_item">
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <div class="cruise_item_img">
                                                <img src="assets/img/cruise/cruise-2.png" alt="img">
                                            </div>
                                        </div>
                                        <div class="col-lg-8">
                                            <div class="cruise_item_inner_content">
                                                <div class="cruise_content_top_wrapper">
                                                    <div class="cruise_content_top_left">
                                                        <ul>
                                                            <li>Kilometros ilimitados <i class="fas fa-circle"></i></li>
                                                            <li>5 Asientos</li>
                                                        </ul>
                                                        <h4>@item.marca</h4>
                                                        <p><i class="fas fa-map-marker-alt"></i> @item.IdPais</p>
                                                    </div>
                                                    <div class="cruise_content_top_right">
                                                        <h5> @item.modelo</h5>
                                                        <h4>Modelo @item.annio</h4>
                                                    </div>
                                                </div>
                                                <div class="cruise_content_middel_wrapper">
                                                    <div class="cruise_content_middel_left">
                                                        <h5>Cancelación gratuita</h5>
                                                        <p>Cancele su reserva cuando desee</p>
                                                    </div>
                                                    <div class="cruise_content_middel_right">
                                                        <h3>@item.precio<sub>/Por día</sub></h3>
                                                        <p>Esto no incluye los gastos de seguros e impuestos </p>
                                                    </div>
                                                </div>
                                                <div class="cruise_content_bottom_wrapper">
                                                    <div class="cruise_content_bottom_right">
                                                        <a href="@Url.Action("DetalleCarro", "Carros")" class="btn btn_theme btn_md">View details</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


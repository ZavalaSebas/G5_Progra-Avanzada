@model IEnumerable<G5_ProgramacionAvanzada.Entities.ResenaEnt>

@{
    ViewBag.Title = "ConsultaResenas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Banner Area -->
<section id="common_banner">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <div class="common_bannner_text">
                    <h2>Reseñas</h2>
                    <ul>
                        <li><a href="@Url.Action("Index", "Login")">Index</a></li>
                        <li><span><i class="fas fa-circle"></i></span> Reseñas</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="explore_area" class="section_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section_heading_center">
                    <h2>
                        Reseñas de Usuarios
                    </h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="cruise_search_result_wrapper">
                    @foreach (var item in Model)
                    {
                        <div class="cruise_search_item">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="cruise_item_img">
                                        <img src="ruta_imagen_resena.jpg" alt="img">
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="cruise_item_inner_content">
                                        <div class="cruise_content_top_wrapper">
                                            <div class="cruise_content_top_left">
                                                <ul>
                                                    <li>@item.IdUsuario <i class="fas fa-circle"></i></li>
                                                    <li>Puntuación: @item.Puntuacion</li>
                                                </ul>
                                                <h4>@item.Titulo</h4>
                                            </div>
                                            <div class="cruise_content_top_right">
                                            </div>
                                        </div>
                                        <div class="cruise_content_middel_wrapper">
                                            <div class="cruise_content_middel_left">
                                                <p>@item.Descripcion</p>
                                            </div>
                                            <div class="cruise_content_middel_right">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

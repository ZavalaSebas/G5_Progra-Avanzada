
@{
    ViewBag.Title = "IniciarSesion";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}
<section id="common_banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="common_bannner_text">
                    <h2>Login</h2>
                    <ul>
                        <li><a href="@Url.Action("Index","Login")">Home</a></li>
                        <li><span><i class="fas fa-circle"></i></span> Login</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!--  Common Author Area -->
<section id="common_author_area" class="section_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="common_author_boxed">
                    <div class="common_author_heading">
                        <h3>Inicia Sesión con tu cuenta</h3>
                    </div>
                    <div class="common_author_form">
                        <form action="#" id="main_author_form">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Introduce tu username" />
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Introduce tu contraseña" />
                                <a href="">Olvidaste tu contraseña?</a>
                            </div>
                            <div class="common_form_submit">
                                <button class="btn btn_theme btn_md">Iniciar Sesion</button>
                            </div>
                            <div class="have_acount_area">
                                <p>No tienes una cuenta? <a href="">Registrate</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
